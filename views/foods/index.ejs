<%- include('../partials/head') %>
<div class="container">
<h1>Welcome To My Pantry</h1>


<ul>


    <% if (pantry.length!=0) {%>
<% pantry.forEach(food=>{ %>
<div class="item-container">
<li>Food Item: <%= food.name %>  
<form action="/users/<%= user._id %>/foods/<%= food._id %>?_method=DELETE" method="POST">
<button type="submit" class="btn btn-danger">DELETE</button>
</form>
<a href="/users/<%= user._id %>/foods/<%= food._id %>/edit" class="btn btn-info">Edit</a>
</li></div>
<% } ) %>
</ul>
<% } else {%>
<h1> There are no items in  this pantry </h1>
    <% }%>
</div>
<%- include('../partials/footer') %>